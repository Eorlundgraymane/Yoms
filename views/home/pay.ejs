<%- include('../includes/header.ejs') %>
<div class="row">
  <div class="col" style="display: flex; justify-content: center;">
    <form action="/pay" method="POST">
      <p>From Account - <%=senderAccountID%></p>
      <input
        required
        hidden
        type="text"
        name="senderAccountID"
        value="<%= senderAccountID %>"
      />
      <label class="form-label">To</label>
      <input
        class="form-control"
        type="number"
        min="1"
        name="payeeAccountID"
        placeholder="Account Number"
        required
      />
      <label class="form-label">Amount</label>
      <input
        class="form-control"
        type="number"
        name="payAmount"
        min="0"
        placeholder="Amount"
        required
      />
      <br>
      <button type="submit" class="form-control btn btn-sm btn-light">Pay</button>
    </form>
  </div>
</div>

<%- include('../includes/footer.ejs') %>
